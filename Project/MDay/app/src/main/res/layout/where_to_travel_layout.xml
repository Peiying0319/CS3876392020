<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:text="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE5D9">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp">

        <Button
            android:id="@+id/btn_travel_tap"
            android:layout_centerHorizontal="true"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Tap Me"
            android:background="#fff"
            android:textSize="18dp"
            android:textColor="#F4ACB7"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/img_travel_places"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@+id/btn_travel_tap"
            android:layout_centerHorizontal="true"
            android:background="#fff" />
        <TextView
            android:id="@+id/travel_text"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:layout_below="@+id/img_travel_places"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#F4ACB7"
            android:background="#fff"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/travel_text"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/btn_travel_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:text="Search"
                android:textColor="#F4ACB7"
                android:textStyle="bold"
                android:textSize="20dp"
                android:onClick="btn_travel_search"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>